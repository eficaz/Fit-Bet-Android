<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="10"
        android:background="@color/md_grey_100"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/content_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" >

        </FrameLayout>

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/chat_camera" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:layout_gravity="center"
        android:background="@drawable/bottom_bg_strip"
        android:gravity="center"
       >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:visibility="visible"
            android:background="@drawable/bottom_bg_strip"
            android:layout_gravity="bottom"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/rowMe"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center|bottom"
                android:gravity="center|bottom"
                android:background="@color/white"
                android:layout_height="66dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/meImg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/me_active"
                    />

                <TextView
                    android:id="@+id/tvMe"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_me"
                    android:fontFamily="@font/lato_regular"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/main_text_color"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rowBet"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center|bottom"
                android:gravity="center|bottom"
                android:background="@color/white"
                android:layout_height="66dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgBet"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bet" />
                <TextView
                    android:id="@+id/tv_bet"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_text_color"
                    android:fontFamily="@font/lato_regular"
                    android:layout_marginBottom="10dp"
                    android:text="@string/tab_bet" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rowLiveBet"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center|bottom"
                android:gravity="center|bottom"
                android:background="@color/transparent"
                android:layout_height="100dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:src="@drawable/tab_center_icon" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/rowLiveActiveBet"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_gravity="center|bottom"
                android:gravity="center|bottom"
                android:background="@color/transparent"
                android:layout_height="100dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:src="@drawable/tab_center_icon_active"/>

            </LinearLayout>


               <!-- <com.eficaz_android.fitbet.utils.CircleImageView
                    android:id="@+id/rowLiveBet"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:background="@drawable/tab_center_icon"
                    android:gravity="center" />-->


            <LinearLayout
                android:id="@+id/rowChat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center|bottom"
                android:gravity="center|bottom"
                android:background="@color/white"
                android:layout_height="66dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgChat"
                    android:layout_width="26dp"
                    android:layout_height="30dp"
                    android:src="@drawable/folder_archive_icon" />
                <TextView
                    android:id="@+id/tvChat"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/main_text_color"
                    android:text="@string/archives" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rowSerrings"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center|bottom"
                android:gravity="center|bottom"
                android:background="@color/white"
                android:layout_height="66dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgSettings"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/settings" />
                <TextView
                    android:id="@+id/tvSettings"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/main_text_color"
                    android:text="@string/tab_settings" />
            </LinearLayout>
        </LinearLayout>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_gravity="center|bottom"
            android:elevation="@dimen/margin_2"
            android:visibility="gone"
            app:tabGravity="fill"
            app:tabIndicatorHeight="0dp"
            app:tabMode="fixed"
            />

    </RelativeLayout>

    <!-- </LinearLayout>-->

</LinearLayout>




